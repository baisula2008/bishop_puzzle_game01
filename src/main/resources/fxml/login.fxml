<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="20" style="-fx-background-color: #f0f0f0; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px; -fx-border-color: #ccc; -fx-border-width: 2px;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="controllers.LoginController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Bishops Swap" />

    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Player Name" />
        <TextField fx:id="player1NameField" style="-fx-pref-width: 200px; -fx-font-size: 14px; -fx-padding: 5px;" />
    </HBox>

    <Button fx:id="startGameButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-cursor: hand; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="Start Game" />
</VBox>
